template(name="joinTribes")
  p.lead.col-md-12.text-center Who are your people?
  form.form.col-md-8.col-md-offset-2
    .col-md-4
      h4.creator-text
        fa.fa.fa-flask 
        | Creators
      each creators
        .checkbox
          label
            if userIsInTribe _id
              input.tribe-join-checkbox(type='checkbox' checked='checked' data-tribe=_id)
            else
              input.tribe-join-checkbox(type='checkbox' data-tribe=_id)
            =name

